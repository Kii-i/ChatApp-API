{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": ".",
    "typeRoots": ["./src/types/express", "./node_modules/@types"],
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}
